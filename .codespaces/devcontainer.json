{
  "name": "AI Virtual Assistant - DataRobot",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      }
    }
  },
  "forwardPorts": [8000, 8001, 8002, 8003, 8004, 8005, 8006, 8007, 8008, 8009, 8010],
  "portsAttributes": {
    "8000": {
      "label": "Agent Services",
      "onAutoForward": "notify"
    },
    "8001": {
      "label": "Analytics Services",
      "onAutoForward": "notify"
    },
    "8002": {
      "label": "API Gateway",
      "onAutoForward": "notify"
    },
    "8003": {
      "label": "Retriever Canonical",
      "onAutoForward": "notify"
    },
    "8004": {
      "label": "Retriever Structured",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install -r src/agent/requirements.txt && pip install -r src/analytics/requirements.txt && pip install -r src/retrievers/unstructured_data/requirements.txt && pip install -r src/retrievers/structured_data/requirements.txt",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspaces/ai-virtual-assistant/data,type=bind,consistency=cached"
  ]
}
